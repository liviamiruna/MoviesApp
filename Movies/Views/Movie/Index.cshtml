@model IEnumerable<Movies.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="table" class="display text-muted">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-edit"></i></a> |
                    <a href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-eye"></i></a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>


    <link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel = "stylesheet" />
 <script src="https://code.jquery.com/jquery-3.5.1.js" ></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script>
$(document).ready(function () {
    $('#table').DataTable();
    });
</script>